<div>
  <div>
    <div>
      <h2>Post #<%= @post.id %> by <%= @post.author.name %></h2>
    </div>
    <div>
      <p>Number of comments: <%= @post.comments_counter %></p>
      <p>Number of likes: <%= @post.likes_counter %></p>
    </div>
    <div>
      <p><%= @post.text %></p>
    </div>
  </div>
  <div>
    <% @post.comments.each do |comment| %>
      <p><strong><%= comment.author.name %> :</strong> <%= comment.text %> </p>
    <%end %>
  </div>
</div>

