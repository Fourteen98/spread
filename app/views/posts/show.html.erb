<div class="post-show-main">
  <div class="post-about-post">
    <div class="post-header">
      <h2>Post #<%= @post.id %> by <%= @post.author.name %></h2>
      <div>
        <span>Number of comments: <%= @post.comments_counter %></span>
        <span>Number of likes: <%= @post.likes_counter %></span>
      </div>
    </div>
    <div>
      <p><%= @post.text %></p>
    </div>
  </div>
  <div>
    <% @post.comments.each do |comment| %>
      <p><strong><%= comment.author.name %> :</strong> <%= comment.text %> </p>
    <%end %>
  </div>
</div>

