<div>
  <h2> Create a new post </h2>
  <%=form_with model: @post, url: user_posts_path, class: 'post-form' do |form|%>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field  :title%>
    </div>
    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
    <div class="form-group">
      <%= form.submit 'Create Post' %>
    </div>
  <%end%>

</div>

