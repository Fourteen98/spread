<section id='hero' class="p-12 w-full flex justify-center items-center">
  <div class="container flex flex-col justify-center mx-auto items-center p-12 w-full gap-8">
    <div>
      <h2 class="text-3xl font-bold underline text-brightRedLight">Log in</h2>
    </div>
    <div class="flex flex-col w-full gap-6 justify-center items-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'flex flex-col w-full gap-8'}) do |f| %>

          <%= f.email_field :email, placeholder: "your email", autofocus: true, autocomplete: "email", class: 'rounded'%>

          <%= f.password_field :password, placeholder: "your password" ,autocomplete: "current-password" , class: 'rounded'%>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me, class: 'w-4 h4 text-blue-600 bg-gray-100 rounded border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-60' %>
            <%= f.label :remember_me, class: 'ml-2 text-sm font-medium text-gray-900 dark:text-gray-300'%>
          </div>
        <% end %>

        <div class="bg-brightRedLight hover:bg-brightRed text-white font-bold py-2 border  rounded flex justify-center items-center">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
<!--    <div>-->
      <%#= render "devise/shared/links" %>
<!--    </div>-->
  </div>
</section>
